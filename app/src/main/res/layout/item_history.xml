<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/lbDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:textSize="20sp"
        android:letterSpacing="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="12 of Jan 2022" />

    <TextView
        android:id="@+id/lbTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:letterSpacing="0.05"
        app:layout_constraintStart_toStartOf="@+id/lbDate"
        app:layout_constraintTop_toBottomOf="@+id/lbDate"
        tools:text="2.55 PM" />

    <TextView
        android:id="@+id/lbQuestionnaireType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:letterSpacing="0.05"
        tools:text="EPDS" />

    <TextView
        android:id="@+id/lbScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:letterSpacing="0.05"
        app:layout_constraintEnd_toEndOf="@+id/lbQuestionnaireType"
        app:layout_constraintTop_toBottomOf="@+id/lbQuestionnaireType"
        tools:text="8.0" />
</androidx.constraintlayout.widget.ConstraintLayout>