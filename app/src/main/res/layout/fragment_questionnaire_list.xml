<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical"
    tools:context=".ui.fragments.QuestionnaireListFragment">

    <Button
        android:id="@+id/btnPhq"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:text="@string/personal_health_questionnaire_depression_scale_phq8"
        android:textAllCaps="false"
        android:textColor="#808080"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnEpds"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="@string/edinburgh_postnatal_depression_scale_epds"
        android:textAllCaps="false"
        android:textColor="#808080"
        android:textSize="24sp" />
</LinearLayout>